<Window x:Class="ChkinWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChkinWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="resultsList"
                 ItemsSource="{Binding}" MaxHeight="300"
                 ScrollViewer.VerticalScrollBarVisibility="Auto" RenderTransformOrigin="0.5,0.5" d:ItemsSource="{d:SampleData ItemCount=5}">
            
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />





                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0">
                            <TextBlock FontWeight="Bold" Margin="5"><Run Text="Reservation:"/></TextBlock>
                            <TextBlock Text="{Binding FirstName}" Margin="5" />
                            <TextBlock Text="{Binding LastName}" Margin="5" />
                        </StackPanel>

                        <Button Margin="5" Padding="10" Grid.Row="0" Grid.Column="1" 
                                Grid.RowSpan="4" VerticalAlignment="Center" Content="Check In" Click="ChekIn_Click_1"/>

                        <StackPanel Orientation="Horizontal" Grid.Row="1">
                            <TextBlock FontWeight="Bold" Margin="5"><Run Text="Room:"/></TextBlock>
                            <TextBlock Text="{Binding Title}" Margin="5" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="2">
                            <TextBlock FontWeight="Bold" Margin="5"><Run Text="Room Number:"/></TextBlock>
                            <TextBlock Text="{Binding RoomNumber}" Margin="5" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="3">
                            <TextBlock FontWeight="Bold" Margin="5"><Run Text="Total Cost:"/></TextBlock>
                            <TextBlock Text="{Binding TotalCost, StringFormat=c}" Margin="5" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>




        <TextBox x:Name="lastname" HorizontalAlignment="Left" Margin="117,28,0,0"  VerticalAlignment="Top" Width="222"/>
        <TextBlock HorizontalAlignment="Left" Margin="144,-6,0,0" TextWrapping="Wrap" Text="Pleese enter your LastName" VerticalAlignment="Top" Width="222" Height="19" FontSize =" 12"/>



        <Button Content="Serch bookings" HorizontalAlignment="Left" Margin="117,60,0,0" VerticalAlignment="Top" Click="Button_Click"/>




    </Grid>
</Window>
